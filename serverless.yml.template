service: geo-cache

plugins:
  - serverless-offline
  - serverless-pseudo-parameters

custom:
  defaultStage: 'dev'
  defaultRegion: 'us-west-1'
  ssmKeyName: ${opt:ssm_key_name, self:provider.stage}

package:
  exclude:
    - .env*
    - serverless.yml*
    - .git/**
    - .vscode/**

provider:
  name: aws
  runtime: nodejs10.x
  stage: ${opt:stage}
  region: ${opt:region}
  environment:
    GOOGLE_API_KEY: ${ssm:/relay/${opt:stage}/key/google_api_key~true}
    REDIS_HOST: ${ssm:/relay/${opt:stage}/redis/host~true}
    REDIS_PORT: ${ssm:/relay/${opt:stage}/redis/port~true}
    REDIS_NAMESPACE: 'cache-geo'
    EXPIRE_SECONDS: 1814400
    SHORT_EXPIRE_SECONDS: 259200
  vpc:
    securityGroupIds:
      - ${opt:vpc_security_group_id}
    subnetIds:
      - ${opt:vpc_subnet_id1}
      - ${opt:vpc_subnet_id2}  
functions:
  caching-metrics:
    handler: lib/index.metricsApi
    timeout: 30
    events:
      - http: 'GET /metrics'
  caching-api:
    handler: lib/index.mapsApi
    timeout: 30
    events:
      - http: 'GET /maps/api/{apiType}/{responseType}'
        private: true
        request:
          parameters:
            paths:
              apiType: true
              responseType: true

